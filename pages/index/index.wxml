    <scroll-view scroll-y='true'  bindescrolltolower='getitems' >

      <view wx:for="{{showingitems}}" wx:key='pass_id'>
        <view class='itembox' data-name='{{item.pass_id}}' bindtap='toiteminfo_page'>
          <view class='imagebox'>
            <image src='{{(item.img_info)?("https://yun.hookeii.cn/itemimg/" + item.img_info):("/icons/default.png")}}'></image>
          </view>
          <view class='contentbbox'>
            <view class='itemname'>{{item.name}}</view>
            <view class='itemtextinfo'>{{item.text_info}}</view>
          </view>
        </view>
      </view>

    </scroll-view>

</view>