<!--pages/index/index.wxml-->
<view class='container'>

<view class='box'>
  <view class='swiperbox'>
      <swiper indicator-dots="true" autoplay="true" circular="true">
        <block wx:for="{{swiperitem}}" wx:key="url" wx:index='index'>
          <swiper-item>
            <view>
            <image src='{{item.src}}' bindtap="swipclick" data-index='{{index}}'></image>
            </view>
          </swiper-item>
        </block>
      </swiper>
  </view>

  <view class='itembystatus'>
    <view class='{{show_ing}}ing' bindtap='binditemshow' id='ing'>正在进行</view>
    <view class='{{show_willbe}}will' bindtap='binditemshow' id='willbe'>即将开始</view>
  </view>
</view>
