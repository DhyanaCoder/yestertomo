/* pages/join/join_choosetime/join_choosetime.wxss */
.box{
  width: 100%;
  padding: 20rpx;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: row;
}
.title{
  height: 70rpx;
  width: 100%;
  background-color: #fff;
  color: aquamarine;
  padding-left: 50rpx; 
  display: flex;
  flex-direction: row;
  align-items: center;
}
.datebox{
  width: 220rpx;
  height: 1120rpx;
  background-color: antiquewhite;
}
.timesbox{
  padding-left: 20rpx;
  width: 475rpx;
  height: 1120rpx;
  background-color: #fff;
}

.chose_date{
  width: 220rpx;
  height: 80rpx;
  color: aquamarine;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 2rpx #e7e7e7 solid;
}

.date{
  width: 220rpx;
  height: 80rpx;
  color: #fff;
  background-color: aquamarine;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 2rpx #e7e7e7 solid;
}

.time{
  position: relative;
  width: 475rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 2rpx #e7e7e7 solid;
  border-left: 2rpx #fff solid; 
  border-right: 2rpx #fff solid; 
}
.time::after{
  content: '';
  margin-top: 5rpx; 
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #e7e7e7;
  border-right: 4rpx solid #e7e7e7;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
}
.click_time{
  background-color: #f0f0f0;
}