/* pages/join/join_chose_obj/join_chose_obj.wxss */
page{
  background-color: #dcdcdc;
}
.a_container{
  margin-bottom: 115rpx;
}
.objs_box{
  position: fixed;
  top: 0;
  z-index: 999;
  height: 240rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  flex-wrap: wrap;
  background-color: antiquewhite;
}

.obj_box{
  height: 120rpx;
  width: 125rpx;
  background-color: white;
  box-sizing: border-box;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx #000 solid;
}
.obj_content{
  font-weight: bold;
  height: 80rpx;
  width: 124rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-right: 2rpx #000 solid;
}
.chose_obj_box{
  background-color: #8888;
}
.obj_info{
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.info_box{
  margin-top: 240rpx;
  height: 485rpx;
  width: 690rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 25rpx;
}
.info{
  height: 97rpx;
  width: 610rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx #000 solid;
  font-family: 'heiti';
  font-size: 35rpx;
}
.info .title{
  width: 230rpx;
  padding-left: 15rpx;
}
.info .content{
  width: 380rpx;
  text-align: right;
  padding-right: 25rpx;
}
.img_box{
  height: 395rpx;
  width: 690rpx;
  margin-top: 25rpx; 
}
.img_box .title{
  font-size: 40rpx;
  height: 70rpx;
  width: 660rpx;
  padding-left: 30rpx; 
}
.img_box .img{
  height: 330rpx;
  width: 600rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 45rpx;
  border-radius: 25rpx;
}
.img image{
  height: 210rpx;
  width: 290rpx;
  margin-right: 8rpx; 
}
.img view{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btnbox{
  position: fixed;
  bottom: 2rpx;
  height: 115rpx;
  width: 100%;
  background-color: #dbdbdb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btnbox .btn{
  width: 81%;
  height: 85rpx;
  background-color: #22ac38;
  box-shadow: -5rpx 4rpx #878787;
  color: #fff;
  font-size: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}
.hover-btn{
  box-shadow: 0rpx 0rpx !important;
  background-color: #85f697 !important; 
}
.choosed_obj_box{
  position: relative;
  height: 120rpx;
  width: 125rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  border: 3rpx #22ac38 solid;
}

.choosed_obj_box::after{
  position: absolute;
  content: '';
  right: 0rpx;
  top: 0;
  height: 0;
  width: 0;
  border-width: 25rpx;
  border-style: solid;
  border-color:#22ac38 #22ac38 transparent transparent  !important;
}
.choosed_obj_box::before{
  position: absolute;
  z-index: 999;
  content: '';
  right: 5%;
  top: 5%;
  height: 0;
  width: 0;
  border-width: 8rpx;
  border-style: solid;
  border-radius: 8rpx;
  border-color:aquamarine  !important;
}
