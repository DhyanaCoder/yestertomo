/* pages/join/join_iteminfo/join_iteminfo.wxss */
page{
  height: 100%;/*生效*/
  background-color: #dbdbdb;
  position: absolute;
}

.a_container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 0rpx 20rpx 35rpx;
  background-color: #fff;
  border-bottom: 30rpx #fff solid;
}
