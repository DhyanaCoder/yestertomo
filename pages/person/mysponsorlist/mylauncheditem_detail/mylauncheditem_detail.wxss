page{
  background-color: #e5e5e5;
}
.container{
  margin-bottom: 120rpx;
}
.info_box{
  height: 85rpx;
  width: 670rpx;
  background-color: #fff;
  border-left: 40rpx #fff solid; 
  border-right: 40rpx #fff solid;
  display: flex;
  flex-direction: row;
}
.info_box .title{
  height: 83rpx;
  width: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 25rpx;
  color: #878787;
  border-bottom: 3rpx #000 solid;
}
.info_box .text{
  height: 83rpx;
  width: 450rpx;
  border-bottom: 3rpx #000 solid;
  display: flex;
  font-family: Microsoft YaHei;
  font-weight: bold;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.time_box{
  background-color: aliceblue;
  width: 670rpx;
  border-left: 40rpx #fff solid; 
  border-right: 40rpx #fff solid;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-content: flex-start;
  padding: 35rpx 0rpx;
}

.time_box .title_box{
  height: 90rpx;
  width: 20%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  box-sizing: border-box;
  border: 2rpx #0c9ee2 solid;
}

.obj_info_box{
  width: 670rpx;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
}
.obj_info_box .text{
  background-color: #fff;
  box-sizing: border-box;
  border: 2rpx #0c9ee2 solid;
  height: 70rpx;
  width: 20%;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.text_info{
  height: 215rpx;
  width: 670rpx;
  border-top: 3rpx #878787 solid;
  background-color: #fff;
  border-left: 40rpx #fff solid; 
  border-right: 40rpx #fff solid;
  display: flex;
  padding-top: 30rpx;
}
.text_info .title{
  width: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  font-size: 25rpx;
  color: #878787;
  border-bottom: 3rpx #000 solid;
}
.text_info .text{
  width: 450rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  padding-right: 30rpx;
  font-display: Microsoft YaHei;
  border-bottom: 3rpx #000 solid;

}
.img_box{
  height: 430rpx;
  width: 670rpx;
  margin: 25rpx 0; 
  border-left: 40rpx #fff solid; 
  border-right: 40rpx #fff solid; 
  background-color: #fff;
}
.img_box .title{
  font-size: 40rpx;
  height: 70rpx;
  width: 660rpx;
  padding-left: 30rpx; 
}
.img_box .img{
  height: 330rpx;
  width: 600rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 45rpx;
  background-color: aliceblue;
  border-radius: 25rpx;
}
.img image{
  height: 250rpx;
  width: 290rpx;
  margin-right: 8rpx; 
}
.img view{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.text .button{
  margin-right: 15rpx;
  height: 60rpx;
  font-weight: 500;
  font-size: 30rpx;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 8rpx 5rpx #185696;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 110rpx;
  background-color: #0c9ee2;
  color: #fff;
}

.hover-button{
  background-color: aliceblue !important;
  color: gray !important;
  box-shadow: 0rpx 0rpx 0rpx 0rpx #fff !important;
}

.btnbox{
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  width: 100%;
  background-color: #dbdbdb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.btnbox .btn{
  width: 81%;
  height: 75rpx;
  background-color: #22ac38;
  box-shadow: -5rpx 4rpx #878787;
  color: #fff;
  font-size: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}
.hover-btn{
  box-shadow: 0rpx 0rpx !important;
  background-color: #85f697 !important; 
  color: red !important;
}
.btnbox button{
  width: 81%;
  height: 75rpx;
  background-color: #22ac38;
  color: #fff;
  font-size: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}