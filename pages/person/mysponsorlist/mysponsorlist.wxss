/* pages/person/mysponsorlist/mysponsorlist.wxss */
@import "../template/template.wxss";

.a_container{
  position: relative;
  background-color: #eae6e6;
  width: 100%;
  padding-bottom: 25rpx; 
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.itembox{
  position: relative;
  overflow: hidden;
  background-color: #fff; 
  border: 10rpx #d2d2d2 solid;
  height: 233rpx;
  width: 730rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.itembox .imagebox{
  width: 273rpx;
  height: 233rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.itembox image{
  border: 2rpx #eae6e6 solid;
  width: 200rpx;
  height: 200rpx;
}
.hover_itembox{
  background-color: #d2d2d2 !important; 
}
.text{
  overflow: hidden;
  height: 233rpx;
  width: 460rpx;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
}
.text .ing_itemtitle{
  height: 115rpx;
  padding: 25rpx 15rpx 25rpx 15rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: left;
}
.text .over_itemtitle{
  height: 115rpx;
  padding: 25rpx 15rpx 25rpx 15rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: left;
}
.text .logic_del_itemtitle{
  height: 115rpx;
  padding: 25rpx 15rpx 15rpx 15rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: left;
}
.text .itemtextinfo{
  height: 115rpx;
  font-size: 30rpx;
  padding: 0rpx 15rpx 10rpx 15rpx;
  text-align: left;
  font-family: 'Microsoft YaHei',
}
.ing_itemtitle::after{
  content: '进行中';
  font-weight: normal;
  color: green;
  position: absolute;
  top: 2%;
  right: 3%;
  z-index: 999;
}

.logic_del_itemtitle::after{
  content: '已取消';
  color: red;
  font-weight: normal;
  position: absolute;
  top: 2%;
  right: 3%;
  z-index: 999;
}
.over_itemtitle::after{
  content: '已结束';
  font-weight: normal;
  position: absolute;
  top: 2%;
  right: 3%;
  z-index: 999;
}
