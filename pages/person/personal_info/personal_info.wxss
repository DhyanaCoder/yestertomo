/* pages/person/personal_info/personal_info.wxss */
.headimage{
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 5rpx #dcdcdc solid;
}
.headimage .text{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
}
.headimage .text::before{
  content: '';
  display: inline-flex;
  width: 30rpx;
  margin-right: 20rpx; 
  height: 148rpx;
  background-color: #fff;
  border-bottom: 5rpx #fff solid; 
}
.headimage image{
  position: relative;
  right: 70rpx;
  height: 110rpx;
  width: 110rpx;
}
.headimage .arrow{
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right: 40rpx;
  transform: rotate(45deg);
}
.userinfobox{
  height: 83rpx;
  width: 100%;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 5rpx #dcdcdc solid;
}
.userinfobox .text{
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
}
.userinfobox .text::before{
  content: '';
  display: inline-flex;
  width: 30rpx;
  margin-right: 20rpx; 
  height: 85rpx;
  background-color: #fff;
  border-bottom: 5rpx #fff solid; 
}
.userinfobox .text::after{
  content: '';
  margin-top: 5rpx; 
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  left: 680rpx;
  transform: rotate(45deg);
}